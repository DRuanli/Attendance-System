# .env.example
# Application Settings
APP_NAME="Classroom Attendance System"
DEBUG=True
SECRET_KEY=your-secret-key-here-generate-a-secure-one

# Database
DATABASE_URL=sqlite:///./attendance.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/attendance_db

# Camera Settings
CAMERA_INDEX=0
FRAME_RATE=5
RECOGNITION_THRESHOLD=0.5
CONFIDENCE_THRESHOLD=0.85

# Face Recognition Settings
FACE_DETECTION_MODEL=hog
# Options: hog (faster) or cnn (more accurate but slower)
NUMBER_OF_TIMES_TO_UPSAMPLE=1
FACE_ENCODING_MODEL=large
# Options: large (more accurate) or small (faster)

# API Settings
API_PREFIX=/api/v1
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# File Storage
UPLOAD_DIR=./data/student_photos
ENCODINGS_DIR=./data/encodings
TEMP_DIR=./data/temp
MAX_FILE_SIZE=5242880
ALLOWED_EXTENSIONS=[".jpg",".jpeg",".png"]

# Classroom Settings
LATE_THRESHOLD_MINUTES=15